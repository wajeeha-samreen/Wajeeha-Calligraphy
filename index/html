 <script>
        function convertToCalligraphy() {
            var text = document.getElementById('textInput').value;  // Get the input text
            var outputDiv = document.getElementById('output');
            
            // If the input text is not empty, show it in the calligraphy style
            if (text.trim() !== "") {
                outputDiv.textContent = text;
                outputDiv.style.display = "block";  // Make sure the output is visible
            } else {
                outputDiv.textContent = "Please enter some text to convert!";
                outputDiv.style.display = "block";  // Ensure the message is visible
            }
        }
    </script>
